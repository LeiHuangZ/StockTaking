<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DoorActivity">

    <Button
        android:id="@+id/receive_btn_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_btn_height"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_side"
        android:layout_marginStart="@dimen/margin_side"
        android:layout_marginTop="@dimen/margin_side"
        android:background="@drawable/btn_bg"
        android:orientation="horizontal"
        android:text="点击扫描订单二维码"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size"/>

    <LinearLayout
        android:id="@+id/receive_ll_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/receive_btn_fast_receive"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_btn_height"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:orientation="horizontal"
                    android:text="一键收货"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="5dp"
                    android:textSize="@dimen/text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/receive_btn_inventory"
                        android:layout_width="120dp"
                        android:layout_height="@dimen/login_btn_height"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_bg"
                        android:orientation="horizontal"
                        android:text="点击扫描"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size" />

                    <Button
                        android:id="@+id/receive_btn_ensure"
                        android:layout_width="120dp"
                        android:layout_height="@dimen/login_btn_height"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_bg"
                        android:orientation="horizontal"
                        android:clickable="false"
                        android:text="确认收货"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="0dp"
                    android:paddingStart="@dimen/storage_layout_padding"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/storage_tv_sum"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/storage_text_size" />

                    <TextView
                        android:id="@+id/receive_tv_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/storage_view_margin"
                        android:text="@string/zero"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/storage_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/storage_tv_count"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/storage_text_size" />

                    <TextView
                        android:id="@+id/receive_tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/storage_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/storage_layout_padding"
                    android:paddingTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/storage_text_size"
                        android:textColor="@color/colorText"
                        android:text="订单号："/>
                    <TextView
                        android:id="@+id/receive_tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:paddingStart="10dp"
                    android:paddingTop="@dimen/storage_view_margin">

                    <TextView
                        android:id="@+id/receive_tv_box_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/storage_layout_padding"
                        android:textColor="#4977A0"
                        android:textSize="16sp" />

                </ScrollView>


            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/storage_layout_padding"
                    android:layout_marginStart="@dimen/storage_layout_padding"
                    android:layout_marginTop="@dimen/storage_layout_padding"
                    android:background="@drawable/spinner_border">

                    <TextView
                        android:id="@+id/receive_tv_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/storage_text_size" />
                </ScrollView>
            </HorizontalScrollView>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/receive_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</FrameLayout>