<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/storage_text_size"
            android:text="请输入物料号（必填）："/>
        <EditText
            android:id="@+id/entry_dialog_matternum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:textSize="@dimen/storage_text_size"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/spinner_border"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="@dimen/storage_text_size"
        android:layout_marginTop="30dp"
        android:text="请输入物料类型："/>
    <EditText
        android:id="@+id/entry_dialog_mattertype"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="@dimen/storage_text_size"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/spinner_border"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="@dimen/storage_text_size"
        android:layout_marginTop="30dp"
        android:text="请输入物料名："/>
    <EditText
        android:id="@+id/entry_dialog_mattername"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/colorText"
        android:gravity="center"
        android:textSize="@dimen/storage_text_size"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/spinner_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/storage_view_margin"
        android:layout_marginStart="@dimen/storage_view_margin"
        android:layout_marginEnd="@dimen/storage_view_margin"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/entry_dialog_btn_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/outbound_btn_height"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/storage_btn_margin_fluctuate"
            android:background="@drawable/btn_bg"
            android:orientation="horizontal"
            android:text="@string/confirm"
            android:textColor="@color/colorWhite"
            android:layout_marginEnd="@dimen/storage_view_margin"
            android:textSize="@dimen/storage_text_size" />
        <Button
            android:id="@+id/entry_dialog_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/outbound_btn_height"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/storage_btn_margin_fluctuate"
            android:background="@drawable/btn_bg"
            android:orientation="horizontal"
            android:text="@string/cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/storage_text_size" />

    </LinearLayout>


</LinearLayout>