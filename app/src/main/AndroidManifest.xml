<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hand.stocktaking">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.LoginActivity"
            android:theme="@style/TranslucentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activity.StorageActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity
            android:name=".activity.MyApplication"
            android:theme="@style/TranslucentTheme">
        </activity>
        <activity
            android:name=".activity.OutboundActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity android:name=".activity.DoorActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity android:name=".activity.ReceiveActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity android:name=".activity.EntryActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity android:name=".activity.SearchActivity"
            android:theme="@style/TranslucentTheme"/>
        <activity android:name=".activity.CleanActivity"
            android:theme="@style/TranslucentTheme">

        </activity>
        <activity android:name=".activity.CleanEnsuerActivity"
            android:theme="@style/TranslucentTheme"></activity>
    </application>

</manifest>